{
    "name": "@earthtone/vue-markdown-lite",
    "version": "0.0.1",
    "description": "Light weight Markdownit Wrapper Vue Component",
    "main": "dist/vue-markdown-lite.umd.js",
    "module": "dist/vue-markdown-lite.esm.js",
    "unpkg": "dist/vue-markdown-lite.min.js",
    "browser": {
        "./sfc": "src/vue-markdown-lite.vue"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "scripts": {
        "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
        "build:umd": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format umd",
        "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
        "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
        "test": "ava"
    },
    "dependencies": {
        "markdown-it": "^8.4.2"
    },
    "devDependencies": {
        "@babel/core": "^7.4.4",
        "@vue/test-utils": "^1.0.0-beta.29",
        "ava": "^1.4.1",
        "browser-env": "^3.2.6",
        "cross-env": "^5.2.0",
        "minimist": "^1.2.0",
        "require-extension-hooks": "^0.3.3",
        "require-extension-hooks-babel": "^1.0.0-beta.1",
        "require-extension-hooks-vue": "^3.0.0",
        "rollup": "^1.4.1",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-commonjs": "^9.2.1",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.0.0",
        "rollup-plugin-replace": "^2.1.0",
        "rollup-plugin-terser": "^4.0.4",
        "rollup-plugin-vue": "^4.7.2",
        "vue": "^2.6.8",
        "vue-template-compiler": "^2.6.8"
    },
    "ava": {
        "require": [
            "./helpers/ava.setup.js",
            "esm"
        ]
    }
}
